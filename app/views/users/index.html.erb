<h1>Listing Users</h1>

<table>
  <tr>
    <th>Login</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.login %></td>
	<td><%= link_to "Make admin", {:action => :make_admin, :id => user} if !user.is_admin %></td>
    <td><%= link_to image_tag('interface/icons/delete.png', :alt => "Delete", :class => "icon"), user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New user', new_user_path %>