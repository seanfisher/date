<% title "Create Account" %>

<h1><%= I18n.t(:new_user_sign_up) %></h1>
<% @user.password = @user.password_confirmation = nil %>

<%= error_messages_for :user %>
<% form_for :user, :url => users_path do |f| -%>
<%= f.hidden_field :invitation_token %>

<p><%= label_tag 'login', I18n.t(:login) %><br/>
<%= f.text_field :login %></p>

<p>
	<%= label_tag 'email', I18n.t(:email) %><br/>
	<% if @user.email %>
	  <%=@user.email%>
	  <%= f.hidden_field :email%>
    <% else %>
	  <%= f.text_field :email %>
   <% end %>
</p>

<p><%= label_tag 'password', I18n.t(:password) %><br/>
<%= f.password_field :password %></p>

<p><%= label_tag 'password_confirmation', I18n.t(:password_confirmation) %><br/>
<%= f.password_field :password_confirmation %></p>

<p><%= submit_tag I18n.t(:sign_up) %></p>
<% end -%>
